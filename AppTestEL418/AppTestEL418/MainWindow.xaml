<Window x:Class="AppTestEL418.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        Title="EL418 TEST APP" Height="750" Width="1100"
        Background="#1A1A1D" Foreground="White"
        WindowState="Maximized"
        Icon="Images/logo.ico"
        Closing="Window_Closing">

    <Window.Resources>
        <!-- Style pour les boutons principaux -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2D2F36"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3A86FF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A86FF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2968CC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style pour les cartes/panels -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#25262B"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour la TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2F36"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3A3B40"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour ComboBox -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2F36"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3A3B40"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton 
                                Name="ToggleButton" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Focusable="false"
                                IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border 
                                            x:Name="Border"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="20" />
                                                </Grid.ColumnDefinitions>
                                                <Path 
                                                    x:Name="Arrow"
                                                    Grid.Column="1"     
                                                    Fill="White"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Data="M 0 0 L 4 4 L 8 0 Z"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter 
                                Name="ContentSite"
                                IsHitTestVisible="False" 
                                Content="{TemplateBinding SelectionBoxItem}"
                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                Margin="10,3,23,3"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                            <Popup 
                                Name="Popup"
                                Placement="Bottom"
                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                AllowsTransparency="True" 
                                Focusable="False"
                                PopupAnimation="Slide">
                                <Grid 
                                    Name="DropDown"
                                    SnapsToDevicePixels="True"                
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    MaxHeight="200">
                                    <Border 
                                        x:Name="DropDownBorder"
                                        Background="#2D2F36"
                                        BorderThickness="1"
                                        BorderBrush="#3A3B40"
                                        CornerRadius="8"
                                        Margin="0,5,0,0">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.3" Color="#000000"/>
                                        </Border.Effect>
                                    </Border>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour les items de ComboBox -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border 
                            Name="Border"
                            Background="{TemplateBinding Background}"
                            Padding="{TemplateBinding Padding}"
                            CornerRadius="4"
                            Margin="2">
                            <ContentPresenter>
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#3A86FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header avec COM -->
            <RowDefinition Height="Auto"/>
            <!-- Infos état -->
            <RowDefinition Height="*"/>
            <!-- Zone centrale -->
            <RowDefinition Height="Auto"/>
            <!-- Zone PER/Actions -->
            <RowDefinition Height="220"/>
            <!-- Console -->
        </Grid.RowDefinitions>

        <!-- Header avec COM et actions -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Section COM -->
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <TextBlock Text="PORT SÉRIE" 
                               Foreground="#888" 
                               FontSize="11" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>

                    <ComboBox x:Name="cmbPorts" 
                              Width="140" 
                              Style="{StaticResource ModernComboBox}"
                              Margin="0,0,10,0"/>

                    <Button x:Name="btnRefresh" 
                            Content="🔄 Rafraîchir" 
                            Style="{StaticResource ModernButton}"
                            Width="110"
                            Margin="0,0,10,0"
                            Click="BtnRefresh_Click"/>

                    <Button x:Name="btnOpen" 
                            Content="▶ Ouvrir" 
                            Style="{StaticResource ModernButton}"
                            Width="90"
                            Margin="0,0,10,0"
                            Click="BtnOpen_Click"/>

                    <Button x:Name="btnClose" 
                            Content="◼ Fermer" 
                            Style="{StaticResource ModernButton}"
                            Width="90"
                            Margin="0,0,10,0"
                            Click="BtnClose_Click"/>

                    <!-- Status LED moderne -->
                    <Border Width="40" Height="40" 
                            Background="#2D2F36" 
                            CornerRadius="20"
                            Padding="8">
                        <Ellipse x:Name="ellipseStatus" 
                                 Fill="#FF4757">
                            <Ellipse.Effect>
                                <DropShadowEffect BlurRadius="15" 
                                                  ShadowDepth="0" 
                                                  Color="#FF4757"
                                                  Opacity="0.8"/>
                            </Ellipse.Effect>
                        </Ellipse>
                    </Border>
                </StackPanel>

                <!-- Boutons d'action -->
                <StackPanel Orientation="Horizontal" 
                            Grid.Column="2" 
                            HorizontalAlignment="Right">
                    <Button x:Name="btnOpenTerminal"
                            Content="⌨ Terminal"
                            Style="{StaticResource ModernButton}"
                            Width="120"
                            Margin="0,0,10,0"
                            Click="BtnOpenTerminal_Click"/>

                    <Border Background="#2D2F36"
                            CornerRadius="8"
                            Width="40" Height="40"
                            Cursor="Hand"
                            MouseLeftButtonUp="BtnAbout_Click">
                        <Image Source="/Images/GitHubLogo.png"
                               Width="22" Height="22"
                               Stretch="Uniform"
                               Margin="9"
                               ToolTip="Voir le projet sur GitHub"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Infos état avec design moderne -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock x:Name="txtEtape" 
                           FontSize="26" 
                           FontWeight="Bold" 
                           Foreground="#3A86FF"
                           Margin="0,0,0,10"/>

                <Border Height="2" 
                        Background="#3A86FF" 
                        CornerRadius="1"
                        Width="100"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,15"/>

                <TextBlock x:Name="txtInstructions" 
                           FontSize="15" 
                           TextWrapping="Wrap"
                           Foreground="#CCC"
                           LineHeight="24"/>
            </StackPanel>
        </Border>

        <!-- Zone centrale avec tous les contenus -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,15">
            <Grid>
                <!-- Image étape -->
                <Image x:Name="imgEtape" 
                       Stretch="Uniform" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       MaxWidth="1300" 
                       MaxHeight="844"/>

                <!-- Zone STS -->
                <StackPanel x:Name="panelSts"
                            Orientation="Vertical" 
                            HorizontalAlignment="Center"  
                            VerticalAlignment="Center"
                            Visibility="Collapsed">
                    <WrapPanel x:Name="wrapSTS" 
                               HorizontalAlignment="Center" 
                               Orientation="Vertical"
                               Margin="0,0,0,20"/>

                    <Border Background="#2D2F36" 
                            CornerRadius="10" 
                            Padding="30,20">
                        <StackPanel>
                            <TextBlock Text="⚙ TEST STS EN COURS..." 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,15"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Foreground="#3A86FF"/>

                            <ProgressBar x:Name="LoadingBarSTS"
                                         IsIndeterminate="True"
                                         Width="350"
                                         Height="6"
                                         Foreground="#3A86FF"
                                         Background="#1A1A1D"
                                         BorderThickness="0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Zone DIPs -->
                <ScrollViewer x:Name="panelDips" 
                              Visibility="Collapsed"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <WrapPanel x:Name="wrapDips" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </ScrollViewer>

                <!-- Zone INPs -->
                <ScrollViewer x:Name="panelInps" 
                              Visibility="Collapsed"
                              VerticalScrollBarVisibility="Auto">
                    <WrapPanel x:Name="wrapInps" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </ScrollViewer>

                <!-- Zone TST -->
                <Grid x:Name="TST_LED_Anim" Visibility="Collapsed">
                    <Image gif:ImageBehavior.AnimatedSource="Images/EL418_TST_ANIM.gif"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                </Grid>

                <!-- Zone OPTIQUES -->
                <Grid x:Name="OPT_Anim" Visibility="Collapsed">
                    <Image x:Name="OptFullOn" 
                           Source="/Images/Animation OPT/FULL_ON.png"
                           Stretch="Uniform" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Visibility="Visible"/>

                    <Image x:Name="OptRouge" 
                           Source="/Images/Animation OPT/ROUGE_OFF.png"
                           Stretch="Uniform" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Visibility="Collapsed"/>

                    <Image x:Name="OptOrange" 
                           Source="/Images/Animation OPT/ORANGE_OFF.png"
                           Stretch="Uniform" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Visibility="Collapsed"/>

                    <Image x:Name="OptVert" 
                           Source="/Images/Animation OPT/VERT_OFF.png"
                           Stretch="Uniform" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Visibility="Collapsed"/>
                </Grid>

                <!-- Zone cellule jour -->
                <ScrollViewer x:Name="panelCelJour" 
                              Visibility="Collapsed"
                              VerticalScrollBarVisibility="Auto">
                    <WrapPanel x:Name="wrapCelJour" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </ScrollViewer>

                <!-- Zone cellule nuit -->
                <ScrollViewer x:Name="panelCelNuit" 
                              Visibility="Collapsed"
                              VerticalScrollBarVisibility="Auto">
                    <WrapPanel x:Name="wrapCelNuit" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Zone saisie PER (visible étape 1 uniquement) -->
        <Border Grid.Row="3" 
                x:Name="panelPer"
                Style="{StaticResource CardStyle}" 
                Visibility="Collapsed"
                Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <TextBox x:Name="txtPer" 
                         Width="200" 
                         FontSize="18"
                         MaxLength="8"
                         KeyDown="TxtPer_KeyDown"
                         Style="{StaticResource ModernTextBox}"
                         Margin="0,0,15,0"/>

                <Button x:Name="btnSendPer" 
                        Content="→ Envoyer PER" 
                        Width="150"
                        Style="{StaticResource ModernButton}"
                        Click="BtnSendPer_Click"/>
            </StackPanel>
        </Border>

        <!-- Console moderne -->
        <Border Grid.Row="4" 
                Background="#0D0D0F" 
                CornerRadius="12" 
                BorderThickness="1"
                BorderBrush="#3A3B40">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3" Color="#000000"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header console -->
                <Border Grid.Row="0" 
                        Background="#16171A" 
                        CornerRadius="12,12,0,0"
                        Padding="15,10">
                    <Grid>
                        <TextBlock Text="⚡ CONSOLE" 
                                   Foreground="#888" 
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>

                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Right">
                            <Ellipse Width="8" Height="8" Fill="#FF4757" Margin="0,0,5,0"/>
                            <Ellipse Width="8" Height="8" Fill="#FFA502" Margin="0,0,5,0"/>
                            <Ellipse Width="8" Height="8" Fill="#26DE81"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Contenu console -->
                <TextBox x:Name="txtLog"
                         Grid.Row="1"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         Background="Transparent"
                         Foreground="#00FF41"
                         BorderThickness="0"
                         Padding="15"
                         FontFamily="Consolas"
                         FontSize="12"/>
            </Grid>
        </Border>
    </Grid>
</Window>