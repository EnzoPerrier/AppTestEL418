<Window x:Class="AppTestEL418.TerminalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TERMINAL"
        Height="700" Width="900"
        Background="#1A1A1D"
        Foreground="White"
        WindowStartupLocation="CenterOwner"
        Icon="Images/logo.ico">

    <Window.Resources>
        <!-- Style pour les boutons de commande -->
        <Style x:Key="CommandButton" TargetType="Button">
            <Setter Property="Background" Value="#2D2F36"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3A86FF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A86FF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2968CC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style pour le bouton Clear -->
        <Style x:Key="ClearButton" TargetType="Button" BasedOn="{StaticResource CommandButton}">
            <Setter Property="BorderBrush" Value="#FF4757"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4757"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#CC3A46"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style pour la TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2F36"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3A3B40"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style Card -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#25262B"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Boutons de commande rapide -->
            <RowDefinition Height="*"/>
            <!-- Zone réception -->
            <RowDefinition Height="Auto"/>
            <!-- Zone d'envoi -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <TextBlock Text="⌨" 
                               FontSize="24" 
                               Foreground="#3A86FF"
                               Margin="0,0,10,0"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="TERMINAL"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Button Content="🗑 Effacer"
                        Grid.Column="2"
                        Style="{StaticResource ClearButton}"
                        Width="100"
                        Click="BtnClear_Click"/>
            </Grid>
        </Border>

        <!-- Boutons de commande rapide -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="COMMANDES RAPIDES" 
                           Foreground="#888" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Margin="5,0,0,10"/>

                <WrapPanel HorizontalAlignment="Left">
                    <Button Content="PER" 
                            Style="{StaticResource CommandButton}"
                            Click="BtnPer_Click"/>
                    <Button Content="STS" 
                            Style="{StaticResource CommandButton}"
                            Click="BtnSts_Click"/>
                    <Button Content="TST=1" 
                            Style="{StaticResource CommandButton}"
                            Click="BtnTst1_Click"/>
                    <Button Content="TST=0" 
                            Style="{StaticResource CommandButton}"
                            Click="BtnTst0_Click"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- Zone réception (Console) -->
        <Border Grid.Row="2" 
                Background="#0D0D0F" 
                CornerRadius="12" 
                BorderThickness="1"
                BorderBrush="#3A3B40"
                Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3" Color="#000000"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header console -->
                <Border Grid.Row="0" 
                        Background="#16171A" 
                        CornerRadius="12,12,0,0"
                        Padding="15,10">
                    <Grid>
                        <TextBlock Text="📡 RÉCEPTION" 
                                   Foreground="#888" 
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>

                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Right">
                            <Ellipse Width="8" Height="8" Fill="#FF4757" Margin="0,0,5,0"/>
                            <Ellipse Width="8" Height="8" Fill="#FFA502" Margin="0,0,5,0"/>
                            <Ellipse Width="8" Height="8" Fill="#26DE81"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Contenu console -->
                <ScrollViewer Grid.Row="1"
                              x:Name="scrollViewer"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="15">
                    <TextBox x:Name="txtReceive"
                             AcceptsReturn="True"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             Background="Transparent"
                             Foreground="#00FF41"
                             BorderThickness="0"
                             FontFamily="Consolas"
                             FontSize="16"
                             VerticalScrollBarVisibility="Disabled"/>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Zone d'envoi -->
        <Border Grid.Row="3" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="txtSend"
                         Grid.Column="0"
                         Height="60"
                         Style="{StaticResource ModernTextBox}"
                         Margin="0,0,10,0"
                         KeyDown="TxtSend_KeyDown"
                         VerticalContentAlignment="Center"/>

                <Button Content="Envoyer"
                        Grid.Column="1"
                        Width="120"
                        Height="40"
                        Style="{StaticResource CommandButton}"
                        Click="BtnSend_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>