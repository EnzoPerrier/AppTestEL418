<Window x:Class="AppTestEL418.TerminalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Terminal Série"
        Height="600" Width="800"
        Background="#1E1E1E"
        Foreground="White"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Text="Terminal"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <!-- Zone réception -->
        <Border Grid.Row="1" CornerRadius="10" Background="Black" BorderThickness="2" BorderBrush="#3A86FF">
            <TextBox x:Name="txtReceive"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     Background="Transparent"
                     Foreground="Lime"
                     BorderThickness="0"/>
        </Border>

        <!-- Zone d’envoi -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBox x:Name="txtSend"
                     Width="600"
                     Height="35"
                     FontSize="16"
                     Background="#2D2F36"
                     Foreground="White"
                     BorderBrush="#3A86FF"
                     BorderThickness="2"
                     Margin="0,0,10,0"
                     KeyDown="TxtSend_KeyDown"/>
            <Button Content="Envoyer"
                    Width="100"
                    Height="35"
                    Background="#2D2F36"
                    Foreground="White"
                    BorderBrush="#3A86FF"
                    BorderThickness="2"
                    FontWeight="Bold"
                    Click="BtnSend_Click"/>
        </StackPanel>
    </Grid>
</Window>
